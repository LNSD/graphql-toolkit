# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{md,mdx}]
# double whitespace at end of line
# denotes a line break in Markdown
trim_trailing_whitespace = false

[*.{json,json5}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[Cargo.lock]
indent_size = unset

[LICENSE*]
indent_size = unset

[README.md]
indent_size = 2

[*.graphql]
indent_size = 2

[*.snap]
trim_trailing_whitespace = false
insert_final_newline = false

[*.sh]
end_of_line = lf
indent_size = tab

[Makefile]
indent_style = tab
